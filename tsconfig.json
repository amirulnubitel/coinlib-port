{
    "compilerOptions": {
        "declaration": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2018"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules/",
        "test",
        "build"
    ]
}